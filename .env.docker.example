# Copy this file to .env.docker and update with your actual values

# Database Configuration
POSTGRES_DB=udt-store-db
POSTGRES_USER=postgres
POSTGRES_PASSWORD=change_this_password
DATABASE_URL=postgresql://postgres:change_this_password@postgres:5432/udt-store-db

# NextAuth Configuration
NEXTAUTH_SECRET=generate_a_random_secret_key_here
NEXTAUTH_URL=http://localhost:3000

# Stripe Configuration
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret

# Application Configuration
NODE_ENV=production
NEXT_TELEMETRY_DISABLED=1


# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# File Upload Configuration
UPLOAD_DIR=/app/uploads
MAX_FILE_SIZE=5242880

# Admin Configuration
ADMIN_EMAIL=admin@yourdomain.com
ADMIN_PASSWORD=change_this_password